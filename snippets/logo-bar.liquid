{% comment %}
  Name: Logo List Section Snippet
  Description: Custom snippet for rendering a list of logos.

  Accepts:
    - media: {Object} Product Media object

        Usage:
    {% render 'logo-bar', media: media %}

{% endcomment %}

<style>

  
  .flex-item {
    flex: 0 0 auto; 
    max-width: 100%;
  }
  
  .flex-item img {
    width: 100%; 
    height: auto;
    display: block;
  }
</style>
    {%- assign logo =  media 
    | image_url: width: 400 
    | image_tag: style: "height: 100px; object-fit: cover;" 
    -%}
    {%- if logo != blank -%}
        <div class="flex-item logo-bar-snippet"> 
          {{logo }}
    {%- endif -%}


